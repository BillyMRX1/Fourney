<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="272dp"
    android:layout_height="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_recommendation"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/no_image"
            android:scaleType="centerCrop"/>
        
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jatim Park 1"
            style="@style/black_sb_14"
            app:layout_constraintTop_toBottomOf="@id/img_recommendation"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/open_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buka"
            style="@style/green_m_12"
            android:padding="6dp"
            android:background="@drawable/bg_green"
            app:layout_constraintTop_toBottomOf="@id/img_recommendation"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mi, magna facilisis eleifend lacus. Aliquam sollicitudin ..."
            style="@style/gray_m_12"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:maxLines="4"
            android:justificationMode="inter_word"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400 m"
            android:id="@+id/tv_distance"
            android:drawableStart="@drawable/location_2"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_desc"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            style="@style/black_r_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Risk"
            android:id="@+id/tv_risk"
            android:drawablePadding="5dp"
            android:drawableEnd="@drawable/ic_info"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_distance"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            style="@style/green_m_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 250.000 - 350.000"
            android:id="@+id/tv_price"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_risk"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            style="@style/black_r_12"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            android:src="@drawable/arrow_line"
            app:tint="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>