<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="24dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_number_challenge"
            style="@style/black_sb_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:text="3/3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_selesai"
            style="@style/black_r_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Selesai"
            app:layout_constraintEnd_toEndOf="@+id/tv_number_challenge"
            app:layout_constraintStart_toStartOf="@+id/tv_number_challenge"
            app:layout_constraintTop_toBottomOf="@+id/tv_number_challenge" />

        <TextView
            android:id="@+id/tv_place"
            style="@style/black_sb_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:text="Surabaya Carnival"
            app:layout_constraintStart_toEndOf="@+id/tv_number_challenge"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/black_r_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="8 Februari 2021"
            app:layout_constraintStart_toStartOf="@+id/tv_place"
            app:layout_constraintTop_toBottomOf="@+id/tv_place" />

        <TextView
            android:id="@+id/tv_coin"
            style="@style/black_sb_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="18dp"
            android:drawablePadding="6dp"
            android:text="+ 150 CP"
            app:drawableStartCompat="@drawable/ic_coin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_date" />

        <TextView
            android:id="@+id/tv_xp"
            style="@style/black_sb_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="18dp"
            android:drawablePadding="6dp"
            android:text="50 XP"
            app:drawableStartCompat="@drawable/ic_xp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_coin"
            app:layout_constraintTop_toBottomOf="@+id/tv_date" />

        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/btn_next"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>