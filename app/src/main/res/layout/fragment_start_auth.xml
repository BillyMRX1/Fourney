<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/logo_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_screen_4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Misi Pariwisata"
            android:gravity="center"
            android:layout_marginTop="40dp"
            style="@style/black_b_22"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesaikan misi dan dapatkan poin\nuntuk ditukar hadiah"
            android:layout_marginTop="12dp"
            android:gravity="center"
            style="@style/black_r_16"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_daftar"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:padding="15dp"
            android:textAllCaps="false"
            android:text="Daftar"
            style="@style/white_b_18"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btn_masuk"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:padding="15dp"
            android:layout_marginStart="16dp"
            android:textAllCaps="false"
            android:text="Masuk"
            android:fontFamily="@font/work_sans_bold"
            android:textColor="@color/blue"
            android:textSize="18sp"
            app:cornerRadius="8dp"
            app:strokeColor="@color/blue"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_lewati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lewati untuk saat ini"
        style="@style/blue_m_14"
        app:layout_constraintTop_toBottomOf="@id/button"
        android:layout_marginTop="20dp"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>